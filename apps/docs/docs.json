{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Osmium",
  "theme": "mint",
  "colors": {
    "primary": "#000000",
    "light": "#ffffff",
    "dark": "#000000"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "groups": [
      {
        "group": "Getting started",
        "pages": ["index", "installation"]
      },
      {
        "group": "Components",
        "pages": [
          "components/chat",
          "components/message-list",
          "components/message-item",
          "components/message-input",
          "components/message-text",
          "components/thinking-block"
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "primary": {
      "type": "github",
      "label": "GitHub",
      "href": "https://github.com/intface-io/osmium"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "seo": {
    "metatags": {
      "og:image": "./og-image.png"
    }
  }
}
